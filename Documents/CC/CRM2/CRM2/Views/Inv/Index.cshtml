@model IEnumerable<CRM2.Models.Invoice>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inv_des)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inv_amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inv_date)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inv_des)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inv_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inv_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Inv_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Inv_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Inv_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
